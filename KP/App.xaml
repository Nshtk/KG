<Application x:Class="KP.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:KP"
             xmlns:Viewmodels="clr-namespace:KP.ViewModels"
             xmlns:Views="clr-namespace:KP.Views"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <DataTemplate DataType="{x:Type Viewmodels:ViewmodelClient}">
            <Views:ViewClient></Views:ViewClient>
        </DataTemplate>
        <DataTemplate DataType="{x:Type Viewmodels:ViewmodelServer}">
            <Views:ViewServer></Views:ViewServer>
        </DataTemplate>
    </Application.Resources>
</Application>
